<!DOCTYPE html>
<html>
<head>
  <title>ExperimentLabs</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

	<p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>

  <%= link_to "sign_out", destroy_user_session_path, method: :DELETE  if current_user %>
  <%= link_to "login", new_user_session_path unless current_user %> / 
  <%= link_to "Sign up", new_user_registration_path unless current_user %>
  


<%= yield %>

</body>
</html>
